# editorconfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[.{aliases,bash*,exports,functions}]
indent_style = tab
indent_size = 4

[*.sh]
indent_style = tab
indent_size = 4

[{.vimrc,*.lua}]
indent_style = space
indent_size = 2
