if infocmp xterm-256color >/dev/null 2>&1; then
	export TERM=xterm-256color
elif [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
	export TERM=gnome-256color
fi

# ANSI CODES - SEPARATE MULTIPLE VALUES WITH ;
#
#  0  reset          4  underline
#  1  bold           7  inverse
#
# FG  BG  COLOR     FG  BG  COLOR
# 30  40  black     34  44  blue
# 31  41  red       35  45  magenta
# 32  42  green     36  46  cyan
# 33  43  yellow    37  47  white

if tput setaf 1 &> /dev/null; then
	tput sgr0
	black=$(tput setaf 0)
	red=$(tput setaf 1)
	green=$(tput setaf 2)
	yellow=$(tput setaf 3)
	blue=$(tput setaf 4)
	magenta=$(tput setaf 5)
	cyan=$(tput setaf 6)
	white=$(tput setaf 7)

	bold=$(tput bold)
	reset=$(tput sgr0)
else
	black="\033[01;30m"
	red="\033[01;31m"
	green="\033[01;32m"
	yellow="\033[01;33m"
	blue="\033[01;34m"
	magenta="\033[01;35m"
	cyan="\033[01;36m"
	white="\033[01;37m"

	bold=""
	reset="\033[00m"
fi

# ==============================================================================
# RBENV environments
# ==============================================================================
export RBENV_ROOT="${HOME}/.rbenv"

if [ -d "$RBENV_ROOT" ]; then
	export PATH="$RBENV_ROOT/bin:${PATH}"
	eval "$(rbenv init -)"
fi

# ==============================================================================
# Heroku
# ==============================================================================
if [ -d "/usr/local/heroku/bin" ] ; then
	PATH="$PATH:/usr/local/heroku/bin"
fi


# ==============================================================================
# Travis
# ==============================================================================
[ -f ~/.travis/travis.sh ] && source ~/.travis/travis.sh

# ==============================================================================
# Composer
# ==============================================================================
export COMPOSER_HOME="$HOME/.local/share/composer"

if [ -d "$COMPOSER_HOME" ] ; then
	PATH="$PATH:$COMPOSER_HOME/vendor/bin"

	if [ -d "$PWD/vendor/bin" ] ; then
		PATH="$PATH:$PWD/vendor/bin"
	fi
fi

# ==============================================================================
# Node Package Manager
# ==============================================================================
NODE_PATH="$NODE_PATH:$HOME/.npm/node_modules"

if [ -d "$PWD/node_modules/.bin" ] ; then
	PATH="$PATH:$PWD/node_modules/.bin"
fi

# ==============================================================================
# Java environments
# ==============================================================================
export JAVA_HOME="/usr/lib/jvm/java-7-oracle"

if [ -d "$JAVA_HOME" ]; then
	#export WTK_HOME="/home/feryardiant/.local/lib/wtk"
	#export JAVA_OPTS="-J-Dswing.aatext=true -J-Dawt.useSystemAAFontSettings=lcd"
	export JAVA_FONTS="/usr/share/fonts/truetype"
fi

# ==============================================================================
# ORACLE DB Environtments
# ==============================================================================
export ORACLE_HOME="/u01/app/oracle/product/11.2.0/xe"

if [ -d "$ORACLE_HOME" ]; then
	export ORACLE_SID="XE"
	export NLS_LANG=`$ORACLE_HOME/bin/nls_lang.sh`
	export ORACLE_BASE="/u01/app/oracle"
	export LD_LIBRARY_PATH="$ORACLE_HOME/lib:$LD_LIBRARY_PATH"
	export PATH="$ORACLE_HOME/bin:$PATH"
fi
