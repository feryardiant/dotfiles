export COMPOSER_HOME="$HOME/.local/share/composer"

if [ -d "$COMPOSER_HOME" ]; then PATH="$PATH:$COMPOSER_HOME/vendor/bin"; fi
if [ -d "$PWD/vendor/bin" ]; then PATH="$PATH:$PWD/vendor/bin"; fi

